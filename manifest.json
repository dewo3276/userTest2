{
  "name": "Time to Consider",
  "permissions": [
    "background"
  ],
  "version": "1.2",
  "manifest_version": 2,
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["https://cuboulder.zoom.us/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "page": "background.html",
    "js": "firebase.js"
  },
  "icons": {
    "16": "extension-icon.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Live Stream",
    "default_icon": "extension-icon.png"
  },
  "content_security_policy":"script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"
}
